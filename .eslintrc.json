{
  "extends": ["airbnb", "prettier", "plugin:@typescript-eslint/recommended"],
  "plugins": ["prettier", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "prettier/prettier": ["error"],
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"]
  }
}
